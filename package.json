{
  "name": "shop-it-ecommerce",
  "version": "1.0.0",
  "description": "full stack mern ecommerce web ",
  "main": "server.js",
  "scripts": {
    "start": "SET node backend/server.js",
    "start-frontend": "react-scripts --openssl-legacy-provider start",
    "build": "react-scripts --openssl-legacy-provider build",
    "dev": "SET NODE_ENV=DEVELOPMENT& nodemon backend/server",
    "prod": "SET NODE_ENV=PRODUCTION& nodemon backend/server",
    "seeder": "node backend/utils/seeder.js",
    "heroku-postbuild": "NPM_CONFIG_DEVELOPMENT=false && npm install --prefix frontend && npm run build --prefix frontend"
  },
  "author": "Harsh Yelwatkar",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cloudinary": "^1.23.0",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-fileupload": "^1.2.0",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^6.8.0",
    "mongoose": "^5.10.16",
    "nodemailer": "^6.4.16",
    "stripe": "^8.128.0",
    "validator": "^13.1.17"
  },
  "devDependencies": {
    "nodemon": "^2.0.6"
  }
}
